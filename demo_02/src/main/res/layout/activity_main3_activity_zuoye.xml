<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#1a7d50"
    tools:context="com.hzyc.zph.demo_02.Main3Activity_zuoye"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="390dp"
        android:background="#af0505"
        android:layout_height="55dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:src="@drawable/topright"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="86dp"
            android:layout_height="34dp"
            android:text="一卡中国"
            android:textSize="20dp"
            android:id="@+id/textView2"
            android:layout_weight="0.15" />

        <EditText
            android:layout_width="136dp"
            android:layout_height="47dp"
            android:id="@+id/editText2"
            android:background="@drawable/input" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="34dp"
            android:text="搜索"
            android:textSize="20dp"
            android:id="@+id/textView3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#e7dcda"
        android:layout_height="152dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"

                android:id="@+id/imageView7" />




            <ImageView
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@drawable/buythg"
                android:id="@+id/imageView4" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"

                android:id="@+id/imageView8" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@drawable/playfun"
                android:id="@+id/imageView5" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"

                android:id="@+id/imageView9" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@drawable/service"
                android:id="@+id/imageView6" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"

                android:id="@+id/imageView10" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="     购物"
                android:id="@+id/textView4"
                android:textSize="10dp"

                android:layout_gravity="center_vertical"
                android:layout_weight="0.78" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="        娱乐"
                android:id="@+id/textView5"
                android:textSize="10dp"

                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="      生活"
                android:id="@+id/textView6"
                android:textSize="10dp"

                android:layout_gravity="center_vertical"
                android:layout_weight="1.00" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />


        </LinearLayout>




    </LinearLayout>



</LinearLayout>
